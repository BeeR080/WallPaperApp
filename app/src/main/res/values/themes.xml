<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wallpaperapp"
        parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/pinky</item>
        <item name="android:colorAccent">@color/purple</item>
        <item name="android:colorControlHighlight">@color/purple</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:navigationBarColor">@color/purple</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="appBarLayoutStyle">@color/purple</item>
        <item name="bottomAppBarStyle">@color/purple</item>
        <item name="toolbarStyle">@color/purple</item>

        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="color">@color/button_purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple</item>
    </style>

    <style name="Theme.Wallpaperapp" parent="Base.Theme.Wallpaperapp" />
